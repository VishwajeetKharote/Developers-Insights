   <script src="https://d3js.org/d3.v5.min.js"></script>
   <script src="/javascripts/custom.js"></script>

   <div class="container-fluid">

      <div class=" row main-header">

         <div class='col-4'>
            <div class="logo-wrapper">
               <h1><a href="/"><img src="/images/logo.png" /></a></h1>
            </div>
         </div>

         <div class='col-8'>
            <div class="menu-wrapper">


               <ul class="nav admin-nav clearfix">
                  <li class='active'><a href="/register">Register</a></li>
               </ul>

            </div>
         </div>




      </div>



      <div class="row dashboard-panel">


         <div class='col-12'>
            <form id="register-form" action="/login" method="POST">

               <fieldset>
                  <legend>Login</legend>

                  <%if (data && data.error == null) { %>
                     <div class='info info-error'>Invalid login details. Please try again !</div>
                  <% } %>

                  <div class="form-row col-1">

                     <div>
                        <label for="email">Email</label>
                        <input type="text" placeholder="me@mymail.com" name="email" required>
                        <span class='error-label'>First Name cannot be empty !</span>
                     </div>

                  </div>


                  <div class="form-row col-1">

                     <div>
                        <label for="psw">Password *</label>
                        <input type="password" placeholder="Enter Password" name="psw" required>
                     </div>


                  </div>
               </fieldset>

               <div>
                  <input type="submit" value="Login">
               </div>

            </form>
         </div>



      </div>

